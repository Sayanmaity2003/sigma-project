<%layout("/layouts/boilerplate")-%>
<div class="row mt-3">
    <h1 class="col-6 offset-3 color-only">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate>

            <h6 class="color-only">Username</h6>
            <div class="mb-3 input-group">
                <span class="input-group-text" id="basic-addon1">@</span>
                <!-- <label for="username" class="form-level color-only">Username</label> -->
                <input id="username" type="text" name="username" class="form-control bgcolor-only color-only" required>
                <div class="valid-feedback color-only">Looks good!</div>
            </div>

            <h6 class="color-only">Email</h6>
            <div class="mb-3 input-group">
                <!-- <label for="email" class="form-level color-only">Email</label> -->
                <input id="email" type="email" name="email" class="form-control bgcolor-only color-only" required>
            </div>

            <h6 class="color-only">Password</h6>
            <div class="mb-3">
                <!-- <label for="password" class="form-level color-only">Password</label> -->
                <input id="password" type="password" name="password" class="form-control bgcolor-only color-only" required>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label color-only" for="flexCheckDefault" required>
                  Remember Me
                </label>
            </div>
            <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>