<%layout("/layouts/boilerplate")-%>
<!-- <body> -->
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <!-- <br><br> -->
            <h3 mt-3 class="color-only">Create a new Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-level color-only">Title</label>
                    <input id="title" type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control bgcolor-only color-only placehold" required>
                    <div class="valid-feedback color-only">Title looks good!</div>
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-level color-only">Description</label>
                    <textarea id="description" name="listing[description]" placeholder="Enter description" class="form-control bgcolor-only color-only placehold" required></textarea>
                    <div class="invalid-feedback color-only">Please enter a short description</div>
                </div>
                
                <!-- I have created a category input feature -->
                <div class="mb-3">
                    <label for="category" class="form-level color-only">Select Category</label>
                    <select name="listing[category]" id="category" class="form-control bgcolor-only color-only" required>
                        <option value="None" selected>--None--</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Top Cities">Top Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Domes">Domes</option>
                        <option value="Golfing">Golfing</option>
                        <option value="Beach">Beach</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-level color-only">Upload Listing Image</label>
                    <input id="image" type="file" name="listing[image]" class="form-control bgcolor-only color-only placehold">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-level color-only">Price</label>
                        <input id="price" name="listing[price]" placeholder="1200" class="form-control bgcolor-only color-only placehold" required>
                        <div class="invalid-feedback color-only">Price should be valid</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-level color-only">Country</label>
                        <input id="country" type="text" name="listing[country]" placeholder="India" class="form-control bgcolor-only color-only placehold" required>
                        <div class="invalid-feedback color-only">Country should be valid</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-level color-only">Location</label>
                    <input id="location" type="text" name="listing[location]" placeholder="Jaipur, Rajasthan" class="form-control bgcolor-only color-only placehold" required>
                    <div class="invalid-feedback color-only">Location should be valid</div>
                </div>
                <button class="btn btn-dark add-btn mt-3">Add</button>
                <br><br>
            </form>
        </div>
    </div>
