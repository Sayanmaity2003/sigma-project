<%layout("/layouts/boilerplate")-%>
<!-- <body> -->
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <!-- <br><br> -->
            <h3 class="mt-3 color-only">Edit your Listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-level color-only">Title</label>
                    <input id="title" class="form-control color-only bgcolor-only" type="text" name="listing[title]" value="<%=listing.title%>" required>
                    <div class="valid-feedback color-only">Title looks good!</div>
                </div>

<!-- ------------------------------------catagory--------------------------------- -->
                <!-- <div class="mb-3"></div> -->
                <label for="category" class="form-level color-only">Select Category</label>
                <select name="listing[category]" id="category" class="form-control bgcolor-only color-only mb-3" required>
                    <option value="None" <%= listing.category === 'None' ? 'selected' : '' %>>--None--</option>
                    <option value="Trending" <%= listing.category === 'Trending' ? 'selected' : '' %>>Trending</option>
                    <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
                    <option value="Top Cities" <%= listing.category === 'Top Cities' ? 'selected' : '' %>>Top Cities</option>
                    <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
                    <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>Castles</option>
                    <option value="Amazing Pools" <%= listing.category === 'Amazing Pools' ? 'selected' : '' %>>Amazing Pools</option>
                    <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
                    <option value="Farms" <%= listing.category === 'Farms' ? 'selected' : '' %>>Farms</option>
                    <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
                    <option value="Domes" <%= listing.category === 'Domes' ? 'selected' : '' %>>Domes</option>
                    <option value="Golfing" <%= listing.category === 'Golfing' ? 'selected' : '' %>>Golfing</option>
                    <option value="Beach" <%= listing.category === 'Beach' ? 'selected' : '' %>>Beach</option>
                </select>
            <!-- </div> -->
<!-- ------------------------------------catagory--------------------------------- -->

                <div class="mb-3">
                    <label for="description" class="form-level color-only">Description</label>
                    <textarea id="description" class="form-control color-only bgcolor-only" name="listing[description]" required><%=listing.description%></textarea>
                    <div class="invalid-feedback color-only">Please enter a short description</div>
                </div>
                
                <div class="mb-3 color-only" >
                    Original Listing Image 
                    <br>
                    <img src="<%=originalImageUrl%>" alt="" style="height: 160px; width: 275px; border-radius: 8px;">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-level color-only">Upload New Image</label>
                    <input id="image" class="form-control color-only bgcolor-only" type="file" name="listing[image]">
                </div>

                <div class="row"> 
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-level color-only">Price</label>
                        <input id="price" class="form-control color-only bgcolor-only" type="Number" name="listing[price]" value="<%=listing.price%>" required>
                        <div class="invalid-feedback color-only">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                            <label for="country" class="form-level color-only">Country</label>
                            <input id="country" class="form-control color-only bgcolor-only" type="text" name="listing[country]" value="<%=listing.country%>" required>
                            <div class="invalid-feedback color-only">Country should be valid</div>
                    </div>
                </div>

                <div>
                    <label for="location" class="form-level color-only">Location</label>
                    <input id="location" class="form-control color-only bgcolor-only" type="text" name="listing[location]" value="<%=listing.location%>" required>
                    <div class="invalid-feedback color-only">Location should be valid</div>
                    
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
<!-- </body> -->